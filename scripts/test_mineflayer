from javascript import require, once
import random

# Mineflayerãƒ©ã‚¤ãƒ–ãƒ©ãƒªã¨é–¢é€£ãƒ‘ãƒƒã‚±ãƒ¼ã‚¸ã‚’èª­ã¿è¾¼ã‚€
mineflayer = require('mineflayer')

# ãƒ©ãƒ³ãƒ€ãƒ ãªBotåã‚’ç”Ÿæˆ
bot_name = f"pybot_{random.randint(1000,9999)}"

# Botã‚’ä½œæˆã—ã€PrismarineJSã®ãƒ†ã‚¹ãƒˆã‚µãƒ¼ãƒãƒ¼ã¸æ¥ç¶š
bot = mineflayer.createBot({
    'host': 'pjs.deptofcraft.com',
    'port': 25565,
    'username': bot_name
})

# loginã‚¤ãƒ™ãƒ³ãƒˆã‚’å¾…ã£ã¦ã‹ã‚‰ãƒãƒ£ãƒƒãƒˆ
once(bot, 'login')
print(f"âœ… Bot {bot_name} has logged in.")
bot.chat("Hello from Python!")

# Botã®ç¾åœ¨ä½ç½®ã‚’å–å¾—ã—ã¦è¡¨ç¤º
print("ğŸ“ Position:", bot.entity.position)

